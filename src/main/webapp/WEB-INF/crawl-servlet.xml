      address="/regions" />
    
    <jaxws:endpoint 
      id="variantsControllerBean" 
      implementor="#variantController" 
      address="/variants" />
    
    <jaxws:endpoint 
      id="samsControllerBean" 
      implementor="#samController" 
      address="/sams" />
 -->

    
    
</beans>